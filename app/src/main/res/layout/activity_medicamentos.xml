<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona el medicamento"
                android:textColor="@color/whiteTextColor"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:fontFamily="@font/montserrat_black"/>

            <Button
                android:id="@+id/btnMed"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="LISTADO DE  MEDICAMENTOS"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/corners_rounded_green"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:backgroundTint="@color/colorMoney"
                android:fontFamily="@font/montserrat_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/whiteTextColor"
                            android:text="Medicamento:"
                            android:textSize="16sp"
                            android:fontFamily="@font/montserrat_black"/>

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:background="@color/whiteTextColor"
                            android:textColor="@color/whiteTextColor"
                            android:layout_margin="10dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Requisitos:"
                        android:textColor="@color/whiteTextColor"
                        android:textSize="16sp"
                        android:fontFamily="@font/montserrat_black"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/txtLugar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/whiteTextColor"
                        android:text="@string/reqMedicamentos"
                        android:fontFamily="@font/montserrat_regular"/>

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardContinuar"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_gravity="center"
                app:cardElevation="5dp"
                android:layout_margin="3dp"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONTINUAR"
                    android:textSize="20sp"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/montserrat_black"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>